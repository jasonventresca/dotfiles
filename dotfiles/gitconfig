[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow 
    remote = green
[color "diff"]
    meta = magenta bold
    frag = cyan ul #bold
    old = red #reverse
    new = green #reverse
    whitespace = blue reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
    branch = magenta
[user]
    email = jasonventresca@gmail.com
    name = Jason Ventresca
[gc]
    auto=1
[merge]
    summary=true
[alias]
    b = branch -v
    r = remote -v
    t = tag -l
    co = checkout
    unstage = reset HEAD
    uncommit = reset --soft HEAD^
    logpuma = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%C(cyan)\\ [%cn]" --decorate --date=relative
    logr = log --date=relative
[pager]
    log = diff-so-fancy | less
    show = diff-so-fancy | less
    diff = diff-so-fancy | less
